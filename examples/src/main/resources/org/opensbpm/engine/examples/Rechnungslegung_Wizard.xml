<pm:process
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns:pm='http://api.opensbpm.org/processmodel'>
    
    <name>Rechnungslegung (Wizard)</name>
    <version>1</version>

    <userSubject starter="true">
        <name>Mitarbeiter</name>
        <roles>Angestellte</roles>
        <functionState eventType="START">
            <name>Rechnung erfassen</name>
            <permission>
                <object>Rechnung</object>
                <field permission="WRITE" mandatory="true">Datum</field>
                <field permission="WRITE" mandatory="true">Nummer</field>
            </permission>
            <toState>Empf채nger erfassen</toState>
        </functionState>
        <functionState>
            <name>Empf채nger erfassen</name>
            <permission>
                <object>Rechnung</object>
                <toOne permission="WRITE">
                    <name>Empf채nger</name>
                    <field permission="WRITE" mandatory="true">Name</field>
                    <field permission="WRITE" mandatory="true">Adresse</field>
                </toOne>
            </permission>
            <toState>Position erfassen</toState>
        </functionState>
        <functionState>
            <name>Position erfassen</name>
            <permission>
                <object>Rechnung</object>
                <toMany permission="WRITE">
                    <name>Position</name>
                    <field permission="WRITE" mandatory="true">Text</field>
                </toMany>
            </permission>
            <toState>Position erfassen</toState>
            <toState>Speichern</toState>
        </functionState>
        <functionState eventType="END">
            <name>Speichern</name>
        </functionState>
    </userSubject>
    

    <object>
        <name>Rechnung</name>
        <toOne>
            <name>Empf채nger</name>
            <field type="STRING">Name</field>
            <field type="STRING">Adresse</field>
        </toOne>
        <field type="DATE">Datum</field>        
        <field type="NUMBER">Nummer</field>
        <toMany>
            <name>Position</name>
            <field type="STRING">Text</field>
            <!--toOne>
                <name>Artikel</name>
                <field type="STRING">Nummer</field>
                <field type="STRING">Bezeichnung</field>
            </toOne-->
            <field type="DECIMAL">Wert</field>
        </toMany>
    </object>    
</pm:process>

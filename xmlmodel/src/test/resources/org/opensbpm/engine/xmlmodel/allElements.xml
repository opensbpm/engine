<pm:process
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns:pm='http://api.opensbpm.org/processmodel'>

    <name>All Elements</name>
    <version>1</version>
    <state>INACTIVE</state>
    <description>All possible elements should occur in this xml</description>
    
    <userSubject starter="true">
        <name>Starter Subject</name>
        <functionState eventType="START">
            <name>Start State</name>
            
            <permission>
                <object>My Object</object>
                <field permission="WRITE" mandatory="true">Name</field>
                <field permission="WRITE" mandatory="true">Referencing Object</field>
                <toOne permission="WRITE">
                    <name>Single Nested</name>
                    <field permission="WRITE" mandatory="true">Name</field>
                </toOne>
                <toMany permission="WRITE">
                    <name>Many Nested</name>
                    <field permission="WRITE" mandatory="true">Name</field>
                </toMany>
            </permission>

            <toState>End State</toState>
        </functionState>        
        <functionState eventType="END">
            <name>End State</name>
        </functionState>
    </userSubject>
    
    <object>
        <name>My Object</name>
        <field type="STRING">Name</field>
        <reference object="Referenced Object">Referencing Object</reference>
        <toOne>
            <name>Single Nested</name>
            <field type="STRING">Name</field>
        </toOne>
        <toMany>
            <name>Many Nested</name>
            <field type="STRING">Name</field>
        </toMany>
    </object>
    
    <object>
        <name>Referenced Object</name>
        <field type="STRING">Name</field>
    </object>
</pm:process>
